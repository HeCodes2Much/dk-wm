# example sxhkdrc for use with yaxwm
#########################################################

# launcher
alt + p
	dmenu_run

# terminal
alt + shift + Return
	st

# screenshot and selection capture
{_,alt + }@Print
	scrot {_,-s}

# dedicated volume keys
{XF86AudioRaiseVolume,XF86AudioLowerVolume}
	pamixer {-i,-d} 2

# dedicated backlight keys
{XF86MonBrightnessUp,XF86MonBrightnessDown}
	xbacklight {+10,-10}

# alt volume keys
alt + {Insert,Delete}
	pamixer {-i,-d} 2

# reload sxhkd
alt + shift + x
	pkill -USR1 -x sxhkd



# quit yaxwm
alt + shift + q
	yaxcmd wm exit

# reload yaxwmrc
alt + shift + r
	yaxcmd wm reload

# restart yaxwm
alt + ctrl + shift + r
	yaxcmd wm restart

# focus next or previous window
alt + {j,k}
	yaxcmd win focus {next,prev}

# close window, swap tiled window in/out of master, cycle tiled windows in place
alt + {q,space,Tab}
	yaxcmd win {kill,swap,cycle}

# toggle fullscreen and fake fullscreen (enable manipulating fullscreen window)
{_,alt + }F11
	yaxcmd win {full,fakefull}

# toggle floating or sticky
alt + shift + {space,s}
	yaxcmd win {float,stick}

# move window, signed (+/-) for relative changes
alt + shift + {h,j,k,l}
	yaxcmd win resize {x=-10,y=+10,y=-10,x=+10}

# resize window, signed (+/-) for relative changes
alt + ctrl + {h,j,k,l}
	yaxcmd win resize {w=-10,h=+10,h=-10,w=+10}

# view, send, or follow to a workspace (by number)
alt + {_,shift + ,ctrl + }{1-9,0}
	yaxcmd ws {view,send,follow} {1-9,10}

# view, send, or follow to the next, previous, last active,
# next non-empty, or prev non-empty workspace
alt + {_,shift + ,ctrl + }{bracketleft,bracketright,BackSpace,Left,Right}
	yaxcmd ws {view,send,follow} {prev,next,last,prevne,nextne}

# view, send, or follow to the next, previous, or last active monitor
alt + {_,shift + ,ctrl + }{comma,period,backslash}
	yaxcmd mon {view,send,follow} {prev,next,last}

# change active workspace layout
alt + {t,m,g,s,w,f}
	yaxcmd set layout {tile,mono,grid,spiral,dwindle,none}

# change number of windows in master or first stack
alt + {_,shift + }{i,d}
	yaxcmd set {master,stack} {+1,-1}

# change gap width
alt + {equal,minus}
	yaxcmd set gap width {+5,-5}

# change border widths
alt + ctrl + {_,shift + }{equal,minus}
	yaxcmd set border {width,outer_width} {+1,-1}
