# launcher
alt + p
    dmenu_run

# terminal
alt + shift + Return
    st

# screenshot
{_,alt + }@Print
    scrot {_,-s}

# dedicated volume keys
{XF86AudioRaiseVolume,XF86AudioLowerVolume}
    pamixer {-i,-d} 2

# dedicated backlight keys
{XF86MonBrightnessUp,XF86MonBrightnessDown}
    xbacklight {+10,-10}

# alt volume keys
alt + {Insert,Delete}
    pamixer {-i,-d} 2

# reload sxhkd
alt + shift + x
    pkill -USR1 -x sxhkd


#********************#
#***** wm binds *****#
#********************#

# quit yaxwm
alt + shift + q
    yaxcmd wm exit

# reload yaxwmrc
alt + shift + r
    yaxcmd wm reload

# restart yaxwm
alt + ctrl + shift + r
    yaxcmd wm restart

# change focus
alt + {j,k}
    yaxcmd win focus {next,prev}

# close active window
alt + q
    yaxcmd win kill

# toggle floating state
alt + shift + space
    yaxcmd win float

# toggle sticky state
alt + shift + s
    yaxcmd win stick

# move window
alt + shift + {h,j,k,l}
    yaxcmd win mvresize {x=-10,y=10,y=-10,x=10}

# resize window
alt + ctrl + {h,j,k,l}
    yaxcmd win mvresize {w=-10,h=10,h=-10,w=10}

# swap window in or out of master
alt + space
    yaxcmd win swap

# cycle tiled windows in place
alt + Tab
    yaxcmd win cycle

# view, send, or follow to workspace
alt + {_,shift + ,ctrl + }{1-9,0}
    yaxcmd ws {_,send,follow} {1-9,10}

# toggle window fake fullscreen. allows move, resize, tiling, etc.
alt + F11
    yaxcmd win fakefs

# change layout
alt + {t,m,f}
    yaxcmd set layout {tile,monocle,none}

# make a pseudo layout by toggling padding
alt + shift + p
	yaxcmd set pad print | awk 'BEGIN\{ i = 0 \} \{ if ($2 != 0) i++ \} END\{ if (i) exit 1 \}' \
		&& yaxcmd set pad l=400 r=400 t=200 b=200 || yaxcmd set pad l=0 r=0 t=0 b=0

# change number of windows in master or first stack
alt + {_,shift + }{i,d}
    yaxcmd set {master,stack} {+1,-1}

# change gap or border size
alt + {_,ctrl + }{equal,minus}
    yaxcmd set {gap,border width} {+1,-1}
alt + {_,ctrl + }shift + equal
    yaxcmd set {gap,border width} reset

